#app, .main, html, body
  width: 100%
  height: 100%

body, div
  display: block

body
  font-family: ff-tisa-web-pro-1, ff-tisa-web-pro-2, "Lucida Grande", "Hiragino Sans GB", "Hiragino Sans GB W3", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif
  -webkit-font-smoothing: antialiased

*
  padding: 0
  margin: 0
  font-family: inherit

a
  cursor: pointer

.icon
  width: 1em 
  height: 1em
  vertical-align: -0.15em
  fill: currentColor
  overflow: hidden

.container
  display: flex
  height: 100%
  width: 100%

.user-info-main
  width: 24%
  height: 100%
  min-width: 300px
  max-width 500px
  background-image: url('/images/bg4.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position-x: 45%
  position: relative
  display: flex
  justify-content: center
  align-items: center

  .info-container
    position: relative
    padding: 0 60px
    z-index: 2
    text-align: center
    color: rgb(255, 255, 255)
    text-shadow: rgba(0, 0, 0, 0.4) 0px 1px 1px
    a
      img
        width: 80px
        height: 80px
        border-radius: 40px
        border: 3px solid white
    h1
      font-size: 2.5em
      letter-spacing: 4px
      color: rgb(255, 255, 255)
      margin: 0px 0px 5px
    .divider
      width: 80%
      margin: 20px auto
      border-top: 1px solid rgba(255, 255, 255, 0.6)
    .divider--secondary
      width: 20%

    .navigation-wrapper
      .inside, .outside
        padding-top: 42px
      .navigation-list
        list-style: none
        padding: 0
        .navigation-item
          display: inline-block
          padding: 5px 10px
          border: 1px solid white
          border-radius: 15px
          font-size: 0.9rem
          cursor: pointer
          color: white
          opacity: 0.8
          a
            color: white
          &:hover
            opacity: 1

      .iconfont
        color: white
        font-size: 24px
        cursor: pointer
        opacity: 0.8
        &:hover
          opacity: 1
  
  .cover
    display: block
    position: absolute
    z-index: 0
    top: 0px
    right: 0px
    bottom: 0px
    left: 0px
    background-color: rgba(0, 0, 0, 0.3)

.main
  flex: 1
  height: 100%
  overflow-y: auto

.post-container
  .post-list,
  .post-detail
    padding: 50px 10%
  .post-list
    .post-item
      flex: 1
    .post-title
      margin-bottom: 5px
      font-size: 1.5em
      border-bottom: none
    .post-excerpt
      margin: 0;
      font-size: 0.9em
      color: #999;
    .post-meta
      color: #c7c7c7
      font-size: 0.9em
      margin-top: 10px
      time, .tags
        font-size: 0.8em
      time
        color: #c7c7c7
      .tag-link
        color: #666
        margin-right: 5px
      .btn-continue
        border: 1px solid #4e97d8
        color: #4e97d8
        padding: 7px 7px
        font-size: 0.8em
        border-radius: 14px
        transition: all 0.5s linear
        margin-left: 5px
        &:hover
          border-color: #1461a7
          color: #1461a7
    .post-divider
      width: 30%
      margin: 2.2em 0 2.1em 0
      border-top: 1px solid #ddd
  .post-detail
    p
      margin: 1.2em 0 -1.2em
      padding-bottom: 1.2em
    h1, h2, h3, h4, h5, h6
      padding-top: 1.2em

.footer
  width: 100%
  flex: 1
  text-align: center
  span
    border-top: 2px solid #ddd
    width: 80%
    display: inline-block
    padding: 30px
    font-size: 0.7em
    color: #b3b3b3